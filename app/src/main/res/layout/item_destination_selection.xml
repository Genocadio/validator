<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/destination_item_background"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <!-- Destination Icon -->
    <TextView
        android:id="@+id/destinationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸš©"
        android:textSize="24sp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical" />

    <!-- Destination Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/destinationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/destinationPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 RWF"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Selection Indicator -->
    <TextView
        android:id="@+id/selectionIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ“"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"
        android:layout_gravity="center_vertical" />

</LinearLayout>
