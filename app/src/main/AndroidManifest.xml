<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Add these permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <!-- MQTT Background Service permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    
    <!-- Auto Mode Navigation Launch permissions -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- NFC permissions -->
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Validator"
        tools:targetApi="31">
        <activity
            android:name=".security.VehicleAuthActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <!-- NavigActivity -->
        <activity android:name=".navigator.NavigActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Validator"
            android:launchMode="singleTop" />
        <!-- HeadlessNavigActivity -->
        <activity android:name=".navigator.HeadlessNavigActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Validator"
            android:launchMode="singleTask"
            android:showWhenLocked="true"
            android:turnScreenOn="true" />
            
        <!-- AutoMode Headless Activity - Self-contained auto mode with MQTT and navigation -->
        <activity android:name=".navigator.AutoModeHeadlessActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Validator"
            android:launchMode="singleTask"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:exported="false" />
            
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Validator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- AutoMode Activity - DEPRECATED: Use AutoModeHeadlessActivity instead -->
        <!--
        <activity
            android:name=".AutoModeActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Validator"
            android:launchMode="singleTop"
            android:exported="false" />
        -->

            
        <!-- MQTT Foreground Service -->
        <service
            android:name=".service.MqttForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
            
        <!-- AutoMode Headless Foreground Service - Keeps AutoModeHeadlessActivity alive -->
        <service
            android:name=".service.AutoModeHeadlessForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
            
        <!-- AutoMode Foreground Service - DEPRECATED: Functionality moved to AutoModeHeadlessActivity -->
        <!--
        <service
            android:name=".service.AutoModeForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
        -->
            
        <!-- Notification Dismiss Receiver -->
        <receiver
            android:name=".service.NotificationDismissReceiver"
            android:enabled="true"
            android:exported="false" />
            
        <!-- Navigation Launch Receiver - DEPRECATED: No longer needed with headless architecture -->
        <!--
        <receiver
            android:name=".receiver.NavigationLaunchReceiver"
            android:enabled="true"
            android:exported="false" />
        -->
            
        <!-- Boot Receiver - Starts AutoModeHeadlessActivity after reboot -->
        <receiver
            android:name=".receiver.BootReceiver"
            android:enabled="true"
            android:exported="false"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        
        <!-- Trip Confirmation Receiver - Handles late trip confirmation notification actions -->
        <receiver
            android:name=".receiver.TripConfirmationReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.gocavgo.validator.ACTION_START_NAVIGATION" />
                <action android:name="com.gocavgo.validator.ACTION_CANCEL_TRIP" />
            </intent-filter>
        </receiver>
        
        <!-- Alarm Permission Receiver - DEPRECATED: No AlarmManager used in headless architecture -->
        <!--
        <receiver
            android:name=".receiver.AlarmPermissionReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.app.action.SCHEDULE_EXACT_ALARM_PERMISSION_STATE_CHANGED" />
            </intent-filter>
        </receiver>
        -->
    </application>

</manifest>